{
    "manifest_version": 3,
    "name": "Time Tracker",
    "version": "1.0",
    "description": "Extension pour suivre le temps de navigation",
    "permissions": ["tabs", "storage"],
    "host_permissions": ["*://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self';"
}

}
